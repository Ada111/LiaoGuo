<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#EAEAEA"
    android:id="@+id/layout_bj"
    android:gravity="center_vertical"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/messagegedetail_rov_icon"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:background="@drawable/ic_launcher"
         />
    <TextView
        android:id="@+id/messagegedetail_rov"
        android:layout_width="5.0dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/messagegedetail_rov_icon"
        />
                    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_time"
        android:layout_toRightOf = "@id/messagegedetail_rov_icon"
        android:layout_marginLeft="5dip"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/messagegedetail_rov"
        android:background="@drawable/v2_img_chats_bg_01" 
        android:layout_below="@id/talk_time"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:padding="5dip">

                <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_icon_voice_normal"
            android:id="@+id/talkmessage_voice"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

</RelativeLayout>


    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
